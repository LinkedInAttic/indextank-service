import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import LogManager
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  IndexLogInfo get_index_log_info(string index_code)'
  print '  RawLogInfo get_raw_log_info()'
  print '  void enqueue_for_optimization(string index_code, i32 priority, double score)'
  print '  void delete_index(string index_code)'
  print '   get_optimization_queue()'
  print '   list_existing_indexes()'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = LogManager.Client(protocol)
transport.open()

if cmd == 'get_index_log_info':
  if len(args) != 1:
    print 'get_index_log_info requires 1 args'
    sys.exit(1)
  pp.pprint(client.get_index_log_info(args[0],))

elif cmd == 'get_raw_log_info':
  if len(args) != 0:
    print 'get_raw_log_info requires 0 args'
    sys.exit(1)
  pp.pprint(client.get_raw_log_info())

elif cmd == 'enqueue_for_optimization':
  if len(args) != 3:
    print 'enqueue_for_optimization requires 3 args'
    sys.exit(1)
  pp.pprint(client.enqueue_for_optimization(args[0],eval(args[1]),eval(args[2]),))

elif cmd == 'delete_index':
  if len(args) != 1:
    print 'delete_index requires 1 args'
    sys.exit(1)
  pp.pprint(client.delete_index(args[0],))

elif cmd == 'get_optimization_queue':
  if len(args) != 0:
    print 'get_optimization_queue requires 0 args'
    sys.exit(1)
  pp.pprint(client.get_optimization_queue())

elif cmd == 'list_existing_indexes':
  if len(args) != 0:
    print 'list_existing_indexes requires 0 args'
    sys.exit(1)
  pp.pprint(client.list_existing_indexes())

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
